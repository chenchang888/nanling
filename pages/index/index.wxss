.policy_wrap {
  width: 700rpx;
  margin: 26rpx auto;
  padding-bottom: 14rpx;
  box-shadow: 0px 2px 4px 1px rgba(204, 204, 204, 0.8);
  border-radius: 5px;
  background-color: #fff;
}
.policy_wrap .policy_list {
  overflow: hidden;
  padding: 10rpx 0 25rpx;
}
.policy_wrap .policy_list .policy_item {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 30rpx;
}
.policy_wrap .policy_list .policy_item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  transform: scaleY(0.5);
  background-color: #ccc;
}
.policy_wrap .policy_list .policy_item .policy_title {
  flex: 3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  overflow: hidden;
  font-size: 28rpx;
}
.policy_wrap .policy_list .policy_item .policy_time {
  flex: 1;
  text-align: right;
}
.policy_wrap .policy_more {
  width: 600rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 0 auto;
  box-shadow: 0px 2px 4px 1px rgba(204, 204, 204, 0.8);
  border-radius: 5px;
  font-size: 30rpx;
  letter-spacing: 12rpx;
  color: #fff;
  background-color: #1D84F8;
}
.wrap .content #nav {
  width: 700rpx;
  margin: 136rpx auto 25rpx;
  padding: 5rpx 0 30rpx;
  overflow: hidden;
  box-shadow: 0px 2px 4px 1px rgba(204, 204, 204, 0.8);
  border-radius: 5px;
  background-color: #fff;
}
.wrap .content #nav .areas {
  position: relative;
  width: 600rpx;
  line-height: 50rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 30rpx;
  color: #1D84F8;
}
.wrap .content #nav .areas::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
  background-color: #ccc;
}
.wrap .content #nav .nav_wrap {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.wrap .content #nav .nav_wrap .nav_item {
  width: 25%;
  margin-top: 30rpx;
  text-align: center;
  color: #333;
}
.wrap .content #nav .nav_wrap .nav_item image {
  width: 82rpx;
  height: 82rpx;
}
.wrap .content .fixed {
  position: fixed;
  top: 110rpx;
  left: 26rpx;
  z-index: 999;
}
.wrap .content .column {
  display: flex;
  justify-content: space-between;
  width: 700rpx;
  margin: 0 auto;
  padding: 20rpx 9rpx;
  box-shadow: 0px 2px 4px 1px rgba(204, 204, 204, 0.8);
  border-radius: 5px;
  background-color: #fff;
}
.wrap .content .column .column_item {
  width: 156.6rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 5px;
  color: #fff;
}
.wrap .content .column .column_item:nth-child(1) {
  background-color: #286AFF;
}
.wrap .content .column .column_item:nth-child(2) {
  background-color: #1CACFF;
}
.wrap .content .column .column_item:nth-child(3) {
  background-color: #41D6D6;
}
.wrap .content .column .column_item:nth-child(4) {
  background-color: #1376EF;
}
.wrap .content .contentTop {
  margin-top: 145rpx;
}
